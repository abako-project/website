
<style>
    /* Fondo oscuro */
    .wait-modal-overlay {
        display: none; /* Oculto por defecto */
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    /* Caja del modal */
    .wait-modal {
        background: white;
        color: dimgray;
        padding: 20px;
        border-radius: 8px;
        min-width: 300px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);

        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .close-btn {
        margin-top: 15px;
    }
</style>

<div id="waitModalOverlay" class="wait-modal-overlay">
    <div class="wait-modal">
        <h2>Please wait</h2>
        <p>This process may take several minutes.</p>
        <button class="close-btn" id="closeWaitModalBtn">Close</button>
    </div>
</div>

<script>
    const closeWaitModalBtn = document.getElementById("closeWaitModalBtn");
    const waitModalOverlay = document.getElementById("waitModalOverlay");

    const showWaitModal = () => {
        waitModalOverlay.style.display = "flex";
    };

    const hideWaitModal = () => {
        waitModalOverlay.style.display = "none";
    };

    // Cerrar modal
    closeWaitModalBtn.addEventListener("click", hideWaitModal);

    // Cerrar al hacer click fuera del modal
    waitModalOverlay.addEventListener("click", (event) => {
        if (event.target === waitModalOverlay) {
            hideWaitModal();
        }
    });
</script>