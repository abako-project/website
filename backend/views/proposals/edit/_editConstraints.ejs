            <%= constraint.description %>

            <% if (locals.loginUser.clientId === project.clientId) { %>
                        <a class="right btn btn_primary btn_href"
                           href="/projects/<%= project.id %>/edit/<%= constraint.id %>?_method=DELETE">
                                üóëÔ∏è
                        </a>
            <% } %>

            <% if (+i > 0) { %>
                        <a class="right btn btn_primary btn_href"
                                href="/projects/<%= project.id %>/edit/swaporder/<%= constraint.id %>/<%= project.constraints[+i - 1].id %>?_method=PUT">
                                ‚ñ≤
                        </a>
            <% } else { %>
                <button class="right btn btn_primary btn_href">‚ñ≤</button>
            <% } %>

            <% if (+i < project.constraints.length - 1) { %>
                        <a class="right btn btn_primary btn_href"
                           href="/projects/<%= project.id %>/edit/swaporder/<%= constraint.id %>/<%= project.constraints[+i + 1].id %>?_method=PUT">
                                ‚ñº
                        </a>
            <% } else { %>
                <a class="right btn btn_primary btn_href">‚ñº</a>
            <% } %>

            <div class="clear"></div>
        </li>
    <% } %>
</ul>
