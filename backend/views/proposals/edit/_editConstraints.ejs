<div class="card-title">Constraints</div>

<ul>
    <% for (const i in project.constraints) { %>
        <% const constraint = project.constraints[i]; %>
        <li>
            <%= constraint.description %>

            <% if (locals.loginUser.clientId === project.clientId) { %>
                        <button class="right button"
                                onclick="redirectConstraintDelete(<%= project.id %>, <%= constraint.id %>); return false;">
                                üóëÔ∏è
                        </button>
            <% } %>

            <% if (+i > 0) { %>
                        <button class="right button"
                                onclick="redirectConstraintsSwapOrder(<%= project.id %>, <%= constraint.id %>, <%= project.constraints[+i - 1].id %>); return false;">
                                ‚ñ≤
                        </button>
            <% } else { %>
                <button class="right button">‚ñ≤</button>
            <% } %>

            <% if (+i < project.constraints.length - 1) { %>
                        <button class="right button"
                                onclick="redirectConstraintsSwapOrder(<%= project.id %>, <%= constraint.id %>, <%= project.constraints[+i + 1].id %>); return false;">
                                ‚ñº
                        </button>
            <% } else { %>
                <button class="right button">‚ñº</button>
            <% } %>

            <div class="clear"></div>
        </li>
    <% } %>
</ul>
