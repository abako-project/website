<div class="milestone__header">
    <%- include("./_headerMilestone", {milestone}) %>
</div>

<div class="milestone__description">
  <%= milestone.description %>
</div>


<div class="milestone__role">
    <%= milestone.role || '' %>

    <%= milestone.proficiency || '' %>

    <%= milestone.skills?.join(", ") || '' %>

    <!-- <span class="bubble"> -->
        <%= milestone.neededFullTimeDeveloper ? "[Full Time]" : "" %>
    <!-- </span> -->
    <!-- <span class="bubble"> -->
        <%= milestone.neededPartTimeDeveloper ? "[Part Time]" : "" %>
    <!-- </span> -->
    <!-- <span class="bubble"> -->
        <%= milestone.neededHourlyDeveloper ? "[Hours per Week]" : ""%>
    <!-- </span> -->
</div>

<% if (false && (locals.showDeveloper ?? true)) { %>
    <div class="milestone__dev">
        <%- include("./__showDeveloper", {milestone}) %>
    </div>
<% } %>

<!-- Pregunta: esto hay que evitar que salga un botón vacío o si acaso que cuando no haya nada salga desactivado y ponga que no hay acciones -->
<% if (locals.showActions ?? true) { %>
        <div class="milestone__actions">
            <%- include("../actions/info/_all", {project, milestone}) %>
        </div>
<% } %>



<div class="milestone__state">
    <% if (["pending"].includes(milestone.state)) { %>
        <i class="ri-timer-2-line"></i>
    <% } %>

    <small class="state state_secondary">
        <% if (milestone.state === "pending") { %>
            Waiting for Developer Assignation
        <% } else if (milestone.state === "task_in_progress") { %>
            Milestone In Progress
        <% } else if (milestone.state === "WaitingClientAcceptSubmission") { %>
            Waiting for Client to Accept Submission
        <% } else if (milestone.state === "SubmissionRejectedByClient") { %>
            Submission Rejected By Client
        <% } else if (milestone.state === "AwaitingPayment") { %>
            Submission Completed - Awaiting Payment
        <% } else if (milestone.state === "Paid") { %>
            Completed and Paid
        <% } else { %>
            Unknown state
        <% } %>
    </small>
</div>
