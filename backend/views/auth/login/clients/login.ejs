<!-- Login Client -->

<div class="onboarding">
    <%- include('../../../layouts/onboarding/_appLeft', {title: "Wellcome to W3S", subtitle: ""}) %>

    <section class="onboarding__right">
        <%- include('../../../layouts/onboarding/_onboardingBackButton', {message: "Don't have an account yet?", buttonText: "Sign up", href: "/auth/register/"}) %>

        <form is="form-with-tzo" id="loginForm" class="content" action="/auth/login/client" method="POST">
            <h1>Client Login</h1>

            <div class="form-group">
                <label for="email">Email</label>
                <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="email"
                        required
                />
            </div>

            <input type="hidden" id="token" name="token"/>

            <div class="form-group">
                <button class="btn btn_primary" type="submit" id="loginButton">
                    Login
                </button>
            </div>

            <div class="form-group">
                <p id="status"></p>
            </div>
        </form>
    </section>
</div>


<script type="module">

    console.log("Client login: Script starting.");

    import SDK from 'https://cdn.jsdelivr.net/npm/@virtonetwork/sdk@0.0.4-alpha.36/dist/esm/index.js';

    const emailElement = document.getElementById("email");
    const tokenElement = document.getElementById("token");
    const loginButton = document.getElementById("loginButton");
    const statusElement = document.getElementById("status");

    let sdk;

    document
        .getElementById("loginForm")
        .addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent automatic form submission

            try {
                console.log("Logging in client...");

                loginButton.disabled = true;
                loginButton.innerHTML = ". . .";
                statusElement.innerHTML = "Starting login";

                if (!emailElement.value) {
                    throw new Error("Error: Email is required");
                }

                showWaitModal();

                <% if (!process.env.VIRTO_MOCK) { %>
                    sdk = initializeSDK();
                    await checkIsRegistered();
                    await prepareConnection()
                    const {extrinsic, token} = await customConnect();
                    await signExtrinsic(extrinsic);

                    tokenElement.value = token;
                <% } else { %>
                    tokenElement.value = "FAKE_TOKEN";
                <% } %>

                statusElement.innerHTML = "Waiting for server response";

                this.submit();
            } catch (error) {
                hideWaitModal();

                statusElement.innerHTML = "Login failed";
                alert(`Login error: ${error instanceof Error ? error.message : "Unknown error"}`);
                console.log(`Login error: ${error instanceof Error ? error.message : "Unknown error"}`);
                loginButton.disabled = false;
                loginButton.innerHTML = "Login";
                statusElement.innerHTML = "Login failed";
            }
        });


    function initializeSDK() {
        try {
            const sdk = new SDK({
                federate_server: "https://dev.abako.xyz/api",
                provider_url: "wss://dev.abako.xyz/kreivo",
                config: {
                    wallet: "polkadot",
                },
            });

            console.log("Client login: SDK initialized successfully");
            return sdk;
        } catch (error) {
            console.log(`Client login: Error initializing SDK: ${error instanceof Error ? error.message : "Unknown error"}`);
            throw error;
        }
    }

    async function checkIsRegistered() {
        console.log("Checking if user is registered...");
        const registered = await sdk.auth.isRegistered(emailElement.value);
        if (!registered) {
            throw new Error("Client needs to register first");
        }
        console.log("The client is registered.");
    }

    async function prepareConnection() {
        statusElement.innerHTML = "Generating certificate for login";

        const preparedData = await promiseWithTimeout(sdk.auth.prepareConnection(emailElement.value), 60000, "Timeout waiting for server to prepare login data");
        if (!preparedData) {
            throw new Error("Error: Login data was not generated");
        }
    }

    async function customConnect() {
        // TODO SPG: Move this to server
        statusElement.innerHTML = "Getting extrinsic from server";
        // Llamar al servidor para obtener el extrinsic

        const response = await fetch(`/proxy/auth/custom-connect`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                userId: emailElement.value
            })
        });

        // console.log("response", response);
        if (!response.ok) {
            throw new Error(`Server responded with status: ${response.status}`);
        }
        const {extrinsic, token} = await response.json();

        console.log('Connection completed successfully on the server:');
        if (!extrinsic) {
            throw new Error("Extrinsic was not received from server");
        }
        if (!token) {
            throw new Error("Token was not received from server");
        }

        return {extrinsic, token};
    }

    async function signExtrinsic(extrinsic) {
        statusElement.innerHTML = "Signing transaction";
        // User signs the transaction that initiates the session on the server
        const signedResult = await sdk.auth.sign(extrinsic);
        // console.log(">>>>>>>>> signedResult >>>>>>>>>", signedResult);
        if (!signedResult.ok) {
            throw new Error("Error: Could not sign the extrinsic");
        }
    }
</script>

