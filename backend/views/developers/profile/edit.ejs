<!-- Choices.js CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
<!-- Choices.js JS -->
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

<div id="appTwoColumns">
    <div class="col1">
        <!-- Sidebar -->
        <%- include('../../components/_mainSidebar') %>
    </div>
    <div class="col2">
        <section class="profile">
            <div class="profileCard">
                <div class="profileCard__header">
                    <h2 class="profileCard__title">Edit Developer Profile</h2>
                    <span class="profileCard__subtitle">Developer data</span>
                </div>
                
                    
                <form method="post" action="/developers/<%= developer.id %>?_method=PUT" enctype="multipart/form-data" class="profileForm">

                    <div class="profileCard__staticInfo">
                        <p><strong>Email:</strong> <%= developer.email %></p>
                        <p><strong>Blockchain Address:</strong> <%= developer.address %></p>
                    </div>

                    <div class="profileCard__section">
                        <h3>Name:</h3>
                        <input type="text" id="name" name="name" value="<%= developer.name %>" placeholder="name" autocomplete="off" class="smallInput"/>
                    </div>

                    <div class="profileCard__section">
                        <h3>Bio:</h3>
                        <textarea id="bio" name="bio"><%= developer.bio %></textarea>
                    </div>

                    <div class="profileCard__section">
                        <h3>Background:</h3>
                        <textarea id="background" name="background"><%= developer.background %></textarea>
                    </div>

                    <div class="profileCard__section">
                        <h3>Role:</h3>
                        <select id="role" name="roleId">
                            <option value="">None</option>
                            <% for (const role of allRoles) { %>
                                <option value="<%= role.id %>"
                                        <%= developer.roleId === role.id && "selected" %> >
                                    <%= role.name %> 
                                </option>
                            <% } %>
                        </select>
                    </div>

                    <div class="profileCard__section">
                        <h3>Proficiency:</h3>
                        <select id="proficiency" name="proficiencyId" >
                            <option value="">None</option>
                            <% for (const proficiency of allProficiencies) { %>
                                <option value="<%= proficiency.id %>"
                                        <%= developer.proficiencyId === proficiency.id && "selected" %> >
                                    <%= proficiency.description %> 
                                </option>
                            <% } %>
                        </select>
                    </div>

                    <div class="profileCard__section">
                        <h3>Github Username:</h3>
                        <input type="text" id="githubUsername" name="githubUsername" value="<%= developer.githubUsername %>"
                            placeholder="Github Username" autocomplete="off"/>
                    </div>

                    <div class="profileCard__section">
                        <h3>Portfolio Url:</h3>
                        <input type="text" id="portfolioUrl" name="portfolioUrl" value="<%= developer.portfolioUrl %>"
                            placeholder="Portfolio Url" autocomplete="off"/>
                    </div>

                    <div class="profileCard__section">
                        <h3>Location:</h3>
                        <input type="text" id="location" name="location" value="<%= developer.location %>" placeholder="Location"
                            autocomplete="off"/>
                    </div>

                    <div class="profileCard__section">
                        <h3>Skills: </h3>
                        <select id="skills" name="skills[]" multiple>
                            <% allSkills.forEach(skill => { 
                                const selected = (developer.skills || []).some(s => s.id === skill.id); %>
                            <option value="<%= skill.id %>" <%= selected ? "selected" : "" %>>
                                <%= skill.name %>
                            </option>
                            <% }) %>
                        </select>
                    </div>
    
                    <div class="profileCard__section">
                        <h3>Languages:</h3>
                        <select id="languages" name="languages[]" multiple size="6">
                            <% (allLanguages || []).forEach(lang => { 
                                const selected = (developer.languages || []).some(i => i.id === lang.id); %>
                            <option value="<%= lang.id %>" <%= selected ? "selected" : "" %>>
                                <%= lang.code %> - <%= lang.name %>
                            </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="profileCard__section">
                        <h3>Availability:</h3>
                        <div class="availabilityRow">
                                <input id="availableToggle"
                                    type="checkbox"
                                    name="isAvailableForHire"
                                    value="1"
                                    <%= developer.isAvailableForHire && "checked" %> />
                                <p>Show “Available for Work” on profile</p>
                        </div>
                    
                        <div id="availabilityOptions"  style="display:none">
                            <h3>Work Mode:</h3>
                            <select id="availabilityType" name="availabilityType" multiple>
                                <option value="full" <%= developer.isAvailableFullTime ? "selected" : "" %>>Full-time</option>
                                <option value="part" <%= developer.isAvailablePartTime ? "selected" : "" %>>Part-time</option>
                                <option value="hourly" <%= developer.isAvailableHourly ? "selected" : "" %>>Hourly</option>
                            </select>
                            <input type="hidden" name="isAvailableFullTime" id="isFullHidden">
                            <input type="hidden" name="isAvailablePartTime" id="isPartHidden">
                            <input type="hidden" name="isAvailableHourly" id="isHourlyHidden">
                        </div>

                        <div  id="hourlyInput"  style="display:none">
                        <h3>Hours per week:</h3>
                        <input type="number"
                            name="availableHoursPerWeek"
                            value="<%= parseInt(developer.availableHoursPerWeek) || '' %>"
                            min="0" />
                        </div>
                    </div>

                    <div class="profileCard__section">
                            <h3> New Photo (Max size 2MB):</h3>
                            <label class="fileInput">
                                <span>Select file…</span>
                                <input type="file" id="img" name="image"/>
                            </label>
                            <img id="photoPreview">
                    </div>

                    <div class="profileCard__section">
                        <div class="actionRow" >
                            <a href="/developers/<%= developer.id %>/profile"> Cancel </a>
                            <input type="submit" value="Save"/> 
                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div> 



<script src="/javascripts/perfil.js"></script>
