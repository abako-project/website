<!-- Choices.js CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
<!-- Choices.js JS -->
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

<div id="appTwoColumns">
    <div class="col1">
        <!-- Sidebar -->
        <%- include('../../components/_mainSidebar') %>
    </div>
    <div class="col2">
        <section class="profile">
            <div class="profileCard">
                <div class="profileCard__header">
                    <h2 class="profileCard__title">Edit Developer Profile</h2>
                    <span class="profileCard__subtitle">Developer data</span>
                </div>
                
                    
                <form id="editDeveloperProfile" method="post" action="/developers/<%= developer.id %>?_method=PUT" enctype="multipart/form-data" class="profileForm"
                      onsubmit="showWaitModal()">

                    <div class="profileCard__staticInfo">
                        <p><strong>Email:</strong> <%= developer.email %></p>
                    </div>

                    <div class="profileCard__section">
                        <h3>Name:</h3>
                        <input type="text" id="name" name="name" value="<%= developer.name %>" placeholder="name" autocomplete="off" class="smallInput" required />
                    </div>

                    <div class="profileCard__section">
                        <h3>Bio:</h3>
                        <textarea id="bio" name="bio" required ><%= developer.bio %></textarea>
                    </div>

                    <div class="profileCard__section">
                        <h3>Background:</h3>
                        <textarea id="background" name="background" required ><%= developer.background %></textarea>
                    </div>

                    <div class="profileCard__section">
                        <h3>Role:</h3>
                        <select id="role" name="role">
                            <option value="">None</option>
                            <% allRoles.forEach(role => { %>
                                <option value="<%= role %>" <%= developer.role === role ? "selected" : "" %>>
                                    <%= role %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="profileCard__section">
                        <h3>Proficiency:</h3>
                        <select id="proficiency" name="proficiency" >
                            <option value="">None</option>
                            <% allProficiencies.forEach(prof => { %>
                                <option value="<%= prof %>" <%= developer.proficiency === prof && "selected" %> >
                                    <%= prof %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    
                    <div class="profileCard__section">
                        <h3>Github Username:</h3>
                        <input type="text" id="githubUsername" name="githubUsername" value="<%= developer.githubUsername %>"
                            placeholder="Github Username" autocomplete="off" required />
                    </div>

                    <div class="profileCard__section">
                        <h3>Portfolio Url:</h3>
                        <input type="text" id="portfolioUrl" name="portfolioUrl" value="<%= developer.portfolioUrl %>"
                            placeholder="Portfolio Url" autocomplete="off" required />
                    </div>

                    <div class="profileCard__section">
                        <h3>Location:</h3>
                        <input type="text" id="location" name="location" value="<%= developer.location %>" placeholder="Location"
                            autocomplete="off" required />
                    </div>

                    <div class="profileCard__section">
                        <h3>Skills: </h3>
                        <select id="skills" name="skills[]" multiple>
                            <% allSkills.forEach(skill => { 
                                const selected = (developer.skills || []).includes(skill); %>
                                <option value="<%= skill %>" <%= selected ? "selected" : "" %>>
                                    <%= skill %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
    

                    <div class="profileCard__section">
                        <h3>Languages:</h3>
                        <select id="languages" name="languages[]" multiple size="6">
                            <% allLanguages.forEach(lang => { 
                                const selected = (developer.languages || []).includes(lang.code); %>

                                <option value="<%= lang.code %>" <%= selected ? "selected" : "" %>>
                                    <%= lang.code %> - <%= lang.name %>
                                </option>

                            <% }) %>
                        </select>
                    </div>

                    <div class="profileCard__section">
                        <h3>Availability:</h3>
                        <div class="availabilityRow">
                                <input id="availableToggle"
                                    type="checkbox"
                                    name="isAvailableForHire"
                                    value="1"
                                    <%= developer.availability !== "NotAvailable" ? "checked" : ""  %> />
                                <p>Show “Available for Work” on profile</p>
                        </div>

                        <div id="availabilityOptions" style="display:none">
                            <h3>Work Mode:</h3>

                            <select id="availabilityType" name="availability">
                                <% availabilityOptions.forEach(option => { %>
                                    <option value="<%= option %>"
                                        <%= developer.availability === option ? "selected" : "" %>>
                                        <%= option %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <div id="hourlyInput" style = "display:none">
                            <h3>Hours per week:</h3>
                            <input type="number"
                                name="availableHoursPerWeek"
                                value="<%= parseInt(developer.availableHoursPerWeek) || '' %>"
                                min="0" />
                        </div>
                    </div>


                    <div class="profileCard__section">
                            <h3> New Photo (Max size 2MB):</h3>
                            <label class="fileInput">
                                <span>Select file…</span>
                                <input type="file" id="img" name="image"/>
                            </label>
                            <img id="photoPreview">
                    </div>

                    <div class="profileCard__section">
                        <div class="actionRow" >
                            <a href="/developers/<%= developer.id %>/profile"> Cancel </a>
                            <button class="projectFlow btn btn_primary" onclick="submitFormById('editDeveloperProfile'); return false;">
                                Save
                            </button>
                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div> 



<script src="/javascripts/perfil.js"></script>
