<ul id="sidebarUser" class="sidebarUser">
  <li class="sidebarUser__wrapper menuBtn">
    
    <!-- User Availability Settings -->
    <div class="availability hidden">
      <div class="availability__header">
        <div class="switchWrapper">
          <span class="switch switch--on">
            <span class="dot"></span>
          </span>
          <p>Availability for Hire</p>
        </div>
      </div>
      <!-- El content se pone en hidden cuando el switch del header está off
        cambiar por estados o algo así
        if (!available) {__content -> hidden} 
      -->
      <div class="availability__content ">
        <div class="switchWrapper">
          <span class="switch switch--off">
            <span class="dot"></span>
          </span>
          <p>Full Time</p>
        </div>
        <div class="switchWrapper">
          <span class="switch switch--on">
            <span class="dot"></span>
          </span>
          <p>Part Time</p>
        </div>
        <div class="switchWrapper">
          <span class="switch switch--on">
            <span class="dot"></span>
          </span>
          <p>Hours per week</p>
          <span class="comboBox">
            <span class="comboBox__input">20</span>
            <span class="comboBox__label">Hours/Week</span>
          </span>
        </div>
      </div>
    </div>

    <% if (!locals.loginUser) { %>
    <a href="/auth/login"> <button>Login</button></a>
    <a href="/auth/register"><button>Registro</button></a>
    <% } else { %> <% if (locals.loginUser.isAdmin) { %>
    <span class="adminDAO">Admin</span>
    <% } %> <% if (locals.loginUser.developerId) { %>

    <div class="userContainer">
      <span class="userContainer__avatar">
        <img
          class="attachment"
          src="/developers/<%= loginUser.developerId %>/attachment"
        />
      </span>
      <span class="userContainer__info">
        <a href="/developers/<%= loginUser.developerId %>/edit"
          ><%= loginUser.email %></a
        >
      </span>
    </div>
    <% } %>
    <% if (locals.loginUser.clientId) { %>
    <div class="userContainer">
      <span class="userContainer__avatar">
        <img
          class="attachment"
          src="/clients/<%= loginUser.clientId %>/attachment"
        />
        <span class="dot"></span>
      </span>
      <span class="userContainer__info">
        <a class="mail" href="/clients/<%= loginUser.clientId %>/edit"
          ><%= loginUser.email %></a
        >
        <small class="status">Available for work</small>
      </span>
    </div>
    <% } %>
    <a href="/auth/logout?_method=DELETE"
      ><i class="ri-logout-box-r-line"></i
    ></a>
    <% } %>
  </div>



</header>
