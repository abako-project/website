
<style>
    .contenedor {
        display: grid;
        grid-template-columns:  1fr auto;
    }
</style>

<div class="contenedor basicHeader">

    <div class="basicHeader__titles">
        <h1 class="title"> <%= locals.title ?? "" %> </h1>
        <p class="subtitle">
            <%= locals.subtitle ?? ""%>
        </p>
    </div>

    <div class="basicHeader__actions">
        <% for (let action of locals.actions ?? []) { %>
            <button class="<%= action.class %>"
                    onclick="<%= action.callback %>; return false;">
                <%= action.title %>
            </button>
            <br/>
        <% } %>
    </div>

</div>

