  <!-- Left -->
  <%- include('../layouts/onboarding/_appLeft') %>

  <section id="appRight" class="onboarding__right">

    <form  is="form-with-tzo" class="content" action="/auth/login/client" method="POST">
      <h1>Login de un Cliente</h1>

      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="email"
          required
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>

      <div class="form-group">
        <button class="btn btn_primary" type="submit">Login</button>
      </div>
    </form>
  </section>
</section>
