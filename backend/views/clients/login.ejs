  <!-- Left -->
  <%- include('../layouts/onboarding/_appLeft') %>

  <section id="appRight" class="onboarding__right">
    <h1>Login de un Cliente</h1>

    <form action="/auth/login/client" method="POST">
      <div class="card">
        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="email"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>

        <div class="form-group">
          <button type="submit">Login</button>
        </div>
      </div>
    </form>
  </section>
</section>
