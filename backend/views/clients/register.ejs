<script>
  function forcePassword() {
    var pw1 = document.getElementById("password").value;
    var pw2 = document.getElementById("confirm_password").value;

    if (!pw1 || !pw2) {
      alert("Password and Confirmation fields must be filled in.");
      return false;
    }
    return true;
  }

  function validPassword() {
    var pw1 = document.getElementById("password").value;
    var pw2 = document.getElementById("confirm_password").value;

    if (pw1 !== pw2) {
      alert("Passwords and Confirmation fields do not match.");
      return false;
    }

    if (pw1 && pw1.length < 1) {
      alert("Password must be at least 1 characters.");
      return false;
    }
    /*
        if (pw1 && pw1.length < 8) {
            alert('Password must be at least 8 characters.');
            return false;
        }

        if (pw1 && !/\d/.test(pw1)) {
            alert('Password must contain at least 1 number.');
            return false;
        }

        if (pw1 && !/[A-Z]/.test(pw1)) {
            alert('Password must contain at least 1 uppercase letter.');
            return false;
        }
*/
    return true;
  }
</script>

<div id="" class="onboarding">
  <%- include('../layouts/onboarding/_appLeft') %>

  <section id="appRight" class="onboarding__right">
    <h1>Create Account</h1>

    <form action="/auth/register/client" method="POST">
      <div class="card">
        <div class="card-title">
          Enter your email below to create your account
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="email"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            autocomplete="off"
            required
          />
        </div>

        <div class="form-group">
          <label for="confirm_password">Repeat Password:</label>
          <input
            type="password"
            id="confirm_password"
            placeholder="Password"
            autocomplete="off"
            required
          />
        </div>

        <button class="form-group btn btn_primary">
          <input
            type="submit"
            value="Register"
            onclick="return forcePassword() && validPassword()"
          />
        </button>
      </div>
    </form>
  </section>
</div>
