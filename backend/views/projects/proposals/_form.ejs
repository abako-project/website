<div class="projectProposal projectProposal__form">
  <div class="form-group area1">
    <label for="title">Project Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= project.title %>"
      placeholder="Title"
      autocomplete="off"
      required
    />
  </div>

  <div class="form-group area2">
    <label for="summary">Short Summary</label>
    <textarea id="summary" name="summary"><%= project.summary %></textarea>
    <small>Max. 280 characters</small>
  </div>

  <div class="form-group area5">
    <label for="description">Project Description</label>
    <textarea id="description" name="description">
    <%= project.description %></textarea
    >
  </div>

  <div class="form-group ">
    <label for="url">Project Link</label>
    <input
      type="text"
      id="url"
      name="url"
      value="<%= project.url %>"
      placeholder="URL"
      autocomplete="off"
    />
  </div>

  <div class="form-group ">
    <label for="budget">Budget</label>
    <input
      type="number"
      step="0.01"
      id="budget"
      value="<%= project.budget %>"
      name="budget"
      placeholder="budget"
      autocomplete="off"
    />
  </div>

  <div class="form-group">
    <label for="currency">Currency</label>
    <input
      type="text"
      id="currency"
      name="currency"
      value="<%= project.currency %>"
      placeholder="Currency"
      autocomplete="off"
    />
  </div>

  <div class="form-group area3 date-picker">
    <label for="deliveryDate">Delivery Date</label>
    <input
      type="datetime-local"
      id="deliveryDate"
      name="deliveryDate"
      value="<%= new Date(project.deliveryDate - browserTimezoneOffset).toISOString().slice(0, 16) %>"
      placeholder="Delivery Date"
      autocomplete="off"
    />
    <i class="ri-calendar-2-line"></i>
  </div>
</div>
