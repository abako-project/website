
<div class="form-group">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"
           value="<%= project.title %>"
           placeholder="Title" autocomplete="off" required>
</div>

<div class="form-group">
    <label for="summary">Summary:</label>
    <textarea id="summary" name="summary"><%= project.summary %></textarea>
</div>

<div class="form-group">
    <label for="description">Descripci√≥n:</label>
    <textarea id="description" name="description"><%= project.description %></textarea>
</div>

<div class="form-group">
    <label for="url">URL:</label>
    <input type="text" id="url" name="url"
           value="<%= project.url %>"
           placeholder="URL" autocomplete="off">
</div>

<div class="form-group">
    <label for="budget">Budget:</label>
    <input type="number" step="0.01" id="budget"
           value="<%= project.budget %>"
           name="budget" placeholder="budget" autocomplete="off">
</div>

<div class="form-group">
    <label for="currency">Currency:</label>
    <input type="text" id="currency" name="currency"
           value="<%= project.currency %>"
           placeholder="Currency" autocomplete="off">
</div>

<div class="form-group">
    <label for="deliveryDate">Delivery Date:</label>
    <input type="datetime-local" id="deliveryDate" name="deliveryDate"
           value="<%= new Date(project.deliveryDate - browserTimezoneOffset).toISOString().slice(0, 16) %>"
           placeholder="Delivery Date" autocomplete="off">
</div>


<div class="form-group">
    <input type="submit" value="Next"/>
</div>


