<%
const actions = [];

if (locals.loginUser.clientId && locals.loginUser.clientId == project.clientId) {

    if (locals.flowProjectState(project, locals.scope) === locals.ProjectState.ProposalRejected) {
        actions.push({
            title: "Review",
            classes: "",
            callback: "/projects/" + project.id + "/edit",
        });
    }

    if (["EscrowFundingNeeded"].includes(project.state)) {
        actions.push({
            title: "Lock the Funds and Start the Project",
            classes: "btn_primary",
            callback: "/projects/" + project.id + "/start",
        });
    }
}
%>

<%- include("./__render", {actions}) %>
