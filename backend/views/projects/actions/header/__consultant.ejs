
<%
const actions = [];

if (locals.loginUser.developerId == project.consultantId) {

    if (["deployed"].includes(project.state) && locals.scope?.projectId == project.id) {
        actions.push({
            title: "Review Scope",
            callback: "/projects/" + project.id + "/milestones/edit",
        });
    }

    if (["ProjectInProgress"].includes(project.state) && project.milestones.every(milestone => milestone.state === "Paid")) {
        actions.push({
            title: "Evaluate Teammates",
            callback: "/projects/" + project.id + "/votations",
        });
    }
}
%>

<%- include("./__render", {actions}) %>


