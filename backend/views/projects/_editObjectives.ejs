

    <div class="card-title">Objectives</div>

    <ul>
        <% for (const objective of project.objectives) { %>
            <li>
                <%= objective.description %>

                <% if (locals.loginUser.clientId === project.clientId) { %>
                    <a href="/projects/<%= project.id %>/objectives/<%= objective.id %>?_method=DELETE">Delete</a>
                <% } %>
            </li>
        <% } %>
    </ul>
